{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "content": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-data"
    },
    "ProductDetails": {
      "type": "component",
      "repeatable": false,
      "component": "product.product-details"
    },
    "StockDetails": {
      "type": "component",
      "repeatable": false,
      "component": "product.inventory",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "products"
    },
    "GalleryImgs": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "classes": {
      "collection": "class",
      "via": "products"
    },
    "colors": {
      "collection": "color",
      "via": "products"
    },
    "gallery": {
      "type": "component",
      "repeatable": false,
      "component": "product.image-gallery"
    },
    "isSoldOut": {
      "type": "boolean",
      "default": false
    }
  }
}
